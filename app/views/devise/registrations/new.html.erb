<div class="col-md-4 col-md-offset-3">
	<div class="signup-form">


<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <b> <%= "Email:-"%></b><%= f.input :email,label: false, required: true, autofocus: true %>
   <b> <%= "Password:-"%></b><%= f.input :password,label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <b><%= "Conform Password:-"%></b><%= f.input :password_confirmation,label: false, required: true %>
  </div>

  <div class="form-actions">
    </br><%= f.button :submit, "Sign up",class: "btn-custom2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
	</div>
</div>