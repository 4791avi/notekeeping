<div class="col-md-4 col-md-offset-3">
	<div class="signup-form">


<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
     <b> <%= "Email:-"%><%= f.input :email,label: false, required: false, autofocus: true %>
    <b> <%= "Password:-"%></b> <%= f.input :password,label: false, required: false %>
    <p>&nbsp&nbsp <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in",class: "btn-custom2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
	</div>
</div>